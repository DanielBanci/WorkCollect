<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.workcollect.ui.tasks.TasksFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/navigate_to_add_task_action"
            app:destination="@id/addTaskBottomSheetFragment"/>
    </fragment>

    <dialog
        android:id="@+id/addTaskBottomSheetFragment"
        android:name="com.example.workcollect.ui.tasks.AddTaskBottomSheetFragment"
        android:label="Add task"
        app:launchSingleTop="true"/>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.workcollect.ui.store.StoreFragment"
        android:label="@string/title_store"
        tools:layout="@layout/fragment_store" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.workcollect.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>